{
    "name": "school-menu-api",
    "version": "3.3.1",
    "description": "초·중·고등학교 식단 쉽게 불러오기",
    "repository": "https://github.com/5d-jh/school-menu-api",
    "main": "package-function/dist/index.js",
    "author": "5d-jh",
    "license": "MIT",
    "scripts": {
        "build:all": "pnpm run build --workspaces",
        "build:function": "pnpm run build --filter @school-api/function",
        "build:clean": "rm -rf ./*/tsconfig.tsbuildinfo ./*/dist/",
        "emulator": "pnpm run build && firebase emulators:start --only database,functions",
        "emulator-firestore": "firebase emulators:start --only firestore",
        "setup-emulator-firestore": "firebase setup:emulators:firestore",
        "deploy": "firebase deploy --only functions",
        "lint": "eslint --fix . --ext .ts"
    },
    "engines": {
        "node": "16",
        "npm": ">=7"
    },
    "private": true,
    "dependencies": {
        "firebase-admin": "^10.0.2",
        "firebase-functions": "^3.16.0"
    },
    "devDependencies": {
        "@types/node": "^16.11.26",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "eslint": "^7.32.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.2.0",
        "@firebase/testing": "^0.20.11",
        "firebase-tools": "^10.0.1",
        "typescript": "^4.6.2",
        "jest": "^27.5.1",
        "@types/jest": "^27.4.1",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.7.0"
    }
}
